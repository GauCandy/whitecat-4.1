# ==========================================
# DISCORD BOT CONFIGURATION
# ==========================================

# Discord Bot Token from https://discord.com/developers/applications
# Get this from: Bot > TOKEN > Reset Token
DISCORD_TOKEN=your_bot_token_here

# Discord Client ID (Application ID)
# Get this from: General Information > APPLICATION ID
CLIENT_ID=1234567890123456789

# Discord Client Secret (for OAuth2)
# Get this from: OAuth2 > CLIENT SECRET > Reset Secret
CLIENT_SECRET=your_client_secret_here

# Discord OAuth2 scopes (comma-separated)
# Common scopes: identify, email, guilds, connections
OAUTH2_SCOPES=identify,email

# Bot Owner Discord ID (has highest permissions)
# Right-click your profile > Copy User ID (requires Developer Mode)
BOT_OWNER_ID=1234567890123456789

# Guild ID for testing commands (optional)
# Right-click server icon > Copy Server ID
GUILD_ID=1234567890123456789

# ==========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==========================================

# Database connection details
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whitecat_bot
DB_USER=postgres
DB_PASSWORD=your_database_password

# Database Pool Configuration
# Min: Minimum connections kept alive
# Max: Maximum connections in pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==========================================
# WEB SERVER CONFIGURATION
# ==========================================

# Server binding (what the Express server listens on)
# 0.0.0.0 = all network interfaces
# 127.0.0.1 = localhost only
WEB_HOST=0.0.0.0
WEB_PORT=2082

# Public URL configuration (for OAuth callbacks and dashboard)
# This is the domain users/Discord will use to access your bot

# Development example:
# PUBLIC_URL=localhost
# PUBLIC_PORT=2082
# PUBLIC_SSL=false
# Result: http://localhost:2082/auth/callback

# Production example:
# PUBLIC_URL=bot.example.com
# PUBLIC_PORT=443
# PUBLIC_SSL=true
# Result: https://bot.example.com/auth/callback

PUBLIC_URL=localhost
PUBLIC_PORT=2082
PUBLIC_SSL=false

# Custom CNAME origins for users (comma-separated)
# Example: user1.example.com,user2.example.com
# Leave empty if not using custom domains
CUSTOM_ORIGINS=

# ==========================================
# LOGGING
# ==========================================

# Log level: error, warn, info, http, verbose, debug, silly
# Recommended: info (production), debug (development)
LOG_LEVEL=info

# ==========================================
# PTERODACTYL PANEL (Optional - for hosting features)
# ==========================================

# Pterodactyl Panel URL (without trailing slash)
PTERODACTYL_URL=https://panel.example.com

# Pterodactyl API Key (Application API Key)
# Get this from: Account > API Credentials > Create API Key
PTERODACTYL_API_KEY=ptla_your_api_key_here

# ==========================================
# PAYMENT GATEWAY (Optional)
# ==========================================

# Payment webhook secret for verifying webhook requests
# PAYMENT_WEBHOOK_SECRET=your_webhook_secret_here

# ==========================================
# REDIS (Optional - for caching and session storage)
# ==========================================

# Redis connection details
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# ==========================================
# OTHER SETTINGS
# ==========================================

# Default language for bot responses
# Supported: en-US, vi
DEFAULT_LOCALE=en-US

# Bot prefix for legacy text commands (optional)
# Not needed if using slash commands only
BOT_PREFIX=!

# Environment mode
# development = enables debug features, verbose logging
# production = optimized performance, less logging
NODE_ENV=development
